{
  "extends": "./../jsconfig.json",
  "exclude": ["dist", "node_modules", "node_modules/*", "tests"],
  "composite": true,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "skipLibCheck": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "types": [
      "./components",
      "./types",
      "vite/client",
      "vite-plugin-pages/client",
      "vite-plugin-pwa/client",
      "vite-plugin-vue-layouts/client",
    ],
    "paths": {
      "/@/*": ["src/*"]
    }
  }
}
