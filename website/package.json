{
  "name": "@feryardiant/admin-web",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite-ssg build",
    "build:dev": "vite-ssg build --mode development",
    "lint": "eslint . --ext .js,.vue",
    "lint:fix": "eslint . --ext .js,.vue --fix",
    "serve": "vite preview",
    "test": "web-test-runner --config tests/web-test-runner.config.mjs"
  },
  "types": "types.d.ts",
  "engines": {
    "node": "14.x"
  },
  "dependencies": {
    "firebase": "^8.8.1",
    "js-cookie": "^3.0.0",
    "nprogress": "^0.2.0",
    "qs": "^6.10.1",
    "vue": "^3.1.5",
    "vue-router": "^4.0.10"
  },
  "devDependencies": {
    "@feryardiant/eslint-config": "^0.0.3",
    "@vitejs/plugin-vue": "^1.3.0",
    "@vue/compiler-sfc": "^3.1.5",
    "@vue/server-renderer": "^3.1.5",
    "@vue/test-utils": "^2.0.0-rc.12",
    "@vueuse/core": "^5.2.0",
    "@vueuse/head": "^0.5.1",
    "@web/test-runner": "^0.13.15",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "eslint-plugin-vue": "^7.15.0",
    "gray-matter": "^4.0.3",
    "markdown-it": "^12.1.0",
    "markdown-it-anchor": "^8.1.2",
    "markdown-it-link-attributes": "^3.0.0",
    "postcss": "^8.3.6",
    "postcss-nested": "^5.0.6",
    "rollup": "^2.55.1",
    "vite": "^2.4.4",
    "vite-plugin-components": "^0.13.2",
    "vite-plugin-md": "^0.10.0",
    "vite-plugin-pages": "^0.15.1",
    "vite-plugin-pwa": "^0.9.3",
    "vite-plugin-vue-layouts": "^0.3.1",
    "vite-plugin-windicss": "^1.2.7",
    "vite-ssg": "^0.14.5",
    "vite-web-test-runner-plugin": "^0.1.0",
    "windicss": "^3.1.6",
    "workbox-window": "^6.1.5"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "eslintConfig": {
    "extends": [
      "@feryardiant",
      "plugin:vue/vue3-recommended"
    ],
    "ignorePatterns": [
      "dist/",
      "node_modules/",
      "public/",
      "*.old"
    ],
    "overrides": [
      {
        "files": [
          "*.vue"
        ],
        "parser": "vue-eslint-parser"
      }
    ],
    "rules": {
      "vue/max-attributes-per-line": [
        "warn",
        {
          "singleline": 5
        }
      ],
      "vue/singleline-html-element-content-newline": "off",
      "vue/html-self-closing": "off",
      "vue/no-setup-props-destructure": "off",
      "vue/no-v-html": "off",
      "no-undef": "off"
    }
  }
}
