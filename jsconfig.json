{
  "exclude": ["dist", "**/dist/*", "node_modules", "**/node_modules/*"],
  "compilerOptions": {
    "sourceMap": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "strict": true,
  },
  "references": [
    {
      "path": "./functions/jsconfig.json"
    },
    {
      "path": "./website/jsconfig.json"
    }
  ]
}
