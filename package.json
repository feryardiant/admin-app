{
  "name": "@feryardiant/admin-app",
  "description": "My Personal Admin App",
  "author": {
    "name": "Fery Wardiyanto",
    "email": "ferywardiyanto@gmail.com"
  },
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "14.x",
    "pnpm": "^6.10.0"
  },
  "scripts": {
    "deploy": "firebase deploy",
    "emulator:start": "firebase emulators:start",
    "emulator:test": "firebase emulators:exec 'pnpm -r test'",
    "prepare": "husky install scripts/husky",
    "publish:packages": "pnpm -r publish --ignore-scripts --no-git-checks",
    "serve": "run-p emulator watch",
    "shell": "firebase functions:shell",
    "watch": "pnpm run --parallel --if-present watch"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@feryardiant/commitlint-config": "^0.1.4",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "firebase-tools": "^9.16.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "prettier-config-standard": "^4.0.0"
  },
  "commitlint": {
    "extends": [
      "@feryardiant/commitlint-config"
    ]
  },
  "lint-staged": {
    "{functions,packages}/**/*.js": [
      "eslint --fix"
    ],
    "website/**/*.{js,vue}": [
      "eslint --fix"
    ]
  }
}
