{
  "name": "@feryardiant/firebase",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "functions",
    "website"
  ],
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "build": "yarn workspaces run build",
    "deploy": "firebase deploy",
    "emulator": "firebase emulators:start",
    "firebase": "cross-env GOOGLE_APPLICATION_CREDENTIALS=.firebase/service-account.json firebase",
    "lint": "yarn workspaces run lint",
    "lint:fix": "yarn workspaces run lint:fix",
    "prepare": "husky install .vscode/husky",
    "publish:packages": "lerna publish from-package --ignore-scripts",
    "serve": "run-p watch emulator",
    "watch": "lerna run --parallel watch"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1",
    "@commitlint/config-conventional": "^12.1",
    "cross-env": "^7.0",
    "dotenv": "^10.0",
    "firebase-tools": "^9.14",
    "husky": "^7.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0",
    "npm-run-all": "^4.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "{functions,websites}/src/**/*.{js,vue}": [
      "yarn workspaces run lint"
    ]
  }
}
