{
  "name": "@feryardiant/admin-app",
  "description": "My Personal Admin App",
  "author": {
    "name": "Fery Wardiyanto",
    "email": "ferywardiyanto@gmail.com"
  },
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "14.x || 16.x",
    "pnpm": "^7.2.0"
  },
  "packageManager": "pnpm@7.2.0",
  "scripts": {
    "deploy": "firebase deploy",
    "emulator:start": "firebase emulators:start",
    "emulator:test": "firebase emulators:exec \"pnpm test -r\"",
    "prepare": "husky install scripts/husky",
    "publish:packages": "pnpm -r publish --ignore-scripts --no-git-checks",
    "serve": "run-p emulator watch",
    "shell": "firebase functions:shell",
    "watch": "pnpm run --parallel --if-present watch"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "eslint": "^8.18.0",
    "firebase-tools": "^11.1.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.2",
    "npm-run-all": "^4.1.5",
    "pnpm": "^7.3.0",
    "prettier": "^2.7.1",
    "prettier-config-standard": "^5.0.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        2,
        "always",
        100
      ],
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test"
        ]
      ]
    }
  },
  "lint-staged": {
    "{functions,packages}/**/*.js": [
      "eslint --fix"
    ],
    "website/**/*.{js,vue}": [
      "eslint --fix"
    ]
  }
}
