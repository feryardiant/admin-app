{
  "name": "@feryardiant/admin-app",
  "description": "My Personal Admin App",
  "author": {
    "name": "Fery Wardiyanto",
    "email": "ferywardiyanto@gmail.com"
  },
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "functions",
    "website"
  ],
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "build": "pnpm -r build",
    "deploy": "firebase deploy",
    "emulator": "firebase emulators:start",
    "firebase": "cross-env GOOGLE_APPLICATION_CREDENTIALS=.firebase/service-account.json firebase",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "prepare": "husky install .vscode/husky",
    "publish:packages": "pnpm -r publish --ignore-scripts --no-git-checks",
    "serve": "run-p emulator watch",
    "shell": "firebase functions:shell",
    "watch": "pnpm run --parallel --if-present watch"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "eslint": "~7.30.0",
    "firebase-tools": "^9.16.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.0.1",
    "npm-run-all": "^4.1.5",
    "pnpm": "^6.10.0",
    "prettier": "~2.3.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "{functions,websites}/src/**/*.{js,vue}": [
      "eslint --fix"
    ]
  }
}
