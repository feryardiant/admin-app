{
  "hosting": {
    "public": "website/dist",
    "ignore": [
      "CNAME",
      "README.md",
      "firebase.json",
      "**/node_modules/**",
      "**/.*"
    ],
    "headers": [
      {
        "source": "/",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, private"
          },
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          }
        ]
      },
      {
        "source": "/manifest.webmanifest",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/manifest+json; charset=utf-8"
          }
        ]
      },
      {
        "source": "/{*,**/*}.ico",
        "headers": [
          {
            "key": "Content-Type",
            "value": "image/x-icon"
          }
        ]
      },
      {
        "source": "/{*,**/*}.svg",
        "headers": [
          {
            "key": "Content-Type",
            "value": "image/svg+xml; charset=utf-8"
          }
        ]
      },
      {
        "source": "/{*,**/*}.js",
        "headers": [
          {
            "key": "Content-Type",
            "value": "text/javascript; charset=utf-8"
          }
        ]
      },
      {
        "source": "/{*,**/*}.@(eot|otf|ttf|ttc|woff|font.css)",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          }
        ]
      },
      {
        "source": "/{*,**/*}.@(gif|ico|jpg|jpeg|png|svg|txt|css|js|webmanifest)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000, private, immutable"
          },
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/api",
        "function": "func"
      },
      {
        "source": "/inbound",
        "function": "func"
      },
      {
        "source": "!/@(api|inbound)/**",
        "destination": "/index.html"
      }
    ]
  },

  "functions": {
    "source": "functions",
    "ignore": [
      "README.md",
      "node_modules",
      "tests",
      ".*"
    ]
  },

  "firestore": {
    "rules": ".firebase/firestore.rules"
  },

  "database": {
    "rules": ".firebase/database-rules.json"
  },

  "storage": {
    "rules": ".firebase/storage.rules"
  }
}
