{
  "hosting": {
    "public": "website/dist",
    "ignore": [
      "CNAME",
      "README.md",
      "firebase.json",
      "**/node_modules/**",
      "**/.*"
    ],
    "headers": [
      {
        "source": "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          }
        ]
      },
      {
        "source": "favicon.ico",
        "headers": [
          {
            "key": "Content-Type",
            "value": "image/x-icon"
          }
        ]
      },
      {
        "source": "manifest.webmanifest",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/manifest+json; charset=utf-8"
          }
        ]
      },
      {
        "source": "**/*.svg",
        "headers": [
          {
            "key": "Content-Type",
            "value": "image/svg+xml; charset=utf-8"
          }
        ]
      },
      {
        "source": "**/*.js",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/x-javascript; charset=utf-8"
          }
        ]
      },
      {
        "source": "**/*.@(gif|ico|jpg|jpeg|png|svg|txt|css|js|html|webmanifest)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=604800, public, must-revalidate"
          },
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/inbound",
        "function": "func"
      },
      {
        "source": "!/@(inbound|mail)/**",
        "destination": "/index.html"
      }
    ]
  },

  "functions": {
    "source": "functions",
    "ignore": [
      "README.md",
      "node_modules",
      "tests",
      ".*"
    ]
  },

  "firestore": {
    "rules": ".firebase/firestore.rules"
  },

  "database": {
    "rules": ".firebase/database-rules.json"
  },

  "storage": {
    "rules": ".firebase/storage.rules"
  }
}
